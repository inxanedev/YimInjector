<Window x:Class="YimInjector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YimInjector"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="YimInjector by inx" FontSize="50px" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Grid.Row="1" Content="Download latest &amp; Inject" Width="300" Height="100" FontSize="20px" x:Name="injectButton" Click="injectButton_Click"/>
        <Label Grid.Row="2" Content="STATUS: Idle" VerticalAlignment="Center" FontSize="15px" Margin="0,0,0,15" x:Name="statusLabel"/>
    </Grid>
</Window>
